<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cbOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/bg_checkbox_filter"
        android:paddingHorizontal="@dimen/_8sdp"
        android:textAlignment="center"
        android:textColor="@color/heavy_metal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CheckBox" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOptionPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/merlot"
        app:layout_constraintBottom_toBottomOf="@id/cbOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cbOption"
        tools:text="1200" />

</androidx.constraintlayout.widget.ConstraintLayout>