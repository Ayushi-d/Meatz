<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alabaster">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shimmer_flBoxSlider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@color/x11GRAY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shimmer_tvBoxName"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/x11GRAY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmer_flBoxSlider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shimmer_tvBoxPrice"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/x11GRAY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tvBoxName" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shimmer_tvBoxOldPrice"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/x11GRAY"
            app:layout_constraintBottom_toBottomOf="@id/shimmer_tvBoxPrice"
            app:layout_constraintStart_toEndOf="@id/shimmer_tvBoxPrice"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tvBoxName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shimmer_tvItemsNumber"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/x11GRAY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tvBoxPrice" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnCount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            app:layout_constraintBottom_toTopOf="@id/shimmer_lnPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tvItemsNumber">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/x11GRAY"
                android:includeFontPadding="false" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/x11GRAY"
                android:includeFontPadding="false" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/x11GRAY"
                android:includeFontPadding="false" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/x11GRAY"
                android:includeFontPadding="false" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/shimmer_lnPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/shimmer_lnAddcart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="top"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@color/x11GRAY"
                android:gravity="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@color/x11GRAY"
                android:gravity="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/x11GRAY"
                android:gravity="center" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/shimmer_lnAddcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/heavy_metal"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@color/x11GRAY" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@color/x11GRAY"
                android:gravity="end" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>